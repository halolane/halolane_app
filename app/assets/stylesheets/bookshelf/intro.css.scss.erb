.tourcontrols {
	position: fixed;
	top: 10%;
	right: 40%;
	width: 270px;
	background: #000;
	color: #fff;
	text-shadow: 0px 0px 1px #fff;
	font-size: 16px;
	padding: 10px;
	-moz-border-radius: 5px;
	-webkit-border-radius: 5px;
	border-radius: 5px;
	font-weight: normal;
	z-index: 9999;
	p {
		padding: 10px;
	}
	a {
		color: white;
		text-decoration: none !important;
	}

	.skipguide {
		color: black;
		padding: 0.35em 1.4em !important;
		bottom: 1px;
		position: relative;
	}
	.close {
		position: absolute;
		top: 6px;
		right: 7px;
		width: 10px;
		height: 10px;
		color: white;
		cursor: pointer;
		opacity: 0.6;
		font-weight: normal;
	}

	.close:hover {
		opacity: 1;
	}
}