@import "bootstrap";
@import "font-awesome";
/* mixins, variables, etc. */

$grayMediumLight: #eaeaea;
$grayLighter: #eaeaea;
$grayLight: #eaeaea;

@mixin box_sizing {
  -moz-box-sizing: border-box; 
  -webkit-box-sizing: border-box; 
  box-sizing: border-box;
}

/* universal */

section {
  overflow: auto;
}

textarea {
  resize: vertical;
}

.center {
  text-align: center;
}

.center h1 {
  margin-bottom: 10px;
}

/* typography */



h1 {
  font-size: 3em;
  letter-spacing: -2px;
  margin-bottom: 30px;
  text-align: center;
}

h2 {
  font-size: 1.7em;
  letter-spacing: -1px;
  margin-bottom: 30px;
  text-align: center;
  font-weight: normal;
  color: #999;
}

p {
  font-size: 1.1em;
  line-height: 1.7em;
}

/* header */

#logo {
  float: left;
  width: 100% !important;
  margin-right: 10px;
  font-size: 1.5em;
  letter-spacing: -1px;
  padding-top: 10px;
  line-height: 1;
}

