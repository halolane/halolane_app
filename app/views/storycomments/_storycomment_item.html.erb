<div class="commentItem">
<% if signed_in? and current_user.canContribute?(@profile) %>
	<span class="comment-edit-btn">
		<%= link_to "x", comment, method: :delete, data: { confirm: "Are you sure you want to delete this comment?" }, title: "Delete this comment", :remote => true  %>
	</span>
<% end %>
	<div class="commentContent">
	  <span class="comment-user green"><%= comment.user.first_name + " " + comment.user.last_name %></span>  
	  <%= raw (comment.content) %>
	</div>
	<div class="comment-storystamp">
		<%= time_ago_in_words(comment.created_at)  %> ago.
	</div>
</div>