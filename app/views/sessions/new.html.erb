<% provide(:title, "Login") %>

<div class="row">
  <div class="span6 offset3">
    <div class="social_signin center">
      <p><a class="btn-auth btn-facebook large" href="/auth/facebook">Login with <b>Facebook</b></a></p>
      <p><h4>or</h4></p>
      <p><div><a class="btn-auth btn-email icon-envelope large"  data-toggle="modal" data-dismiss="modal" aria-hidden="true" href="#signin_form"></i>Login by <b>email</b></a></div></p>
    </div>
  </div>
</div>

<!-- Modal -->
<div id="signin_form" class="modal hide fade" tabindex="-1" role="dialog" role="dialog" aria-labelledby="addcontributorLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="forgetpasswordlabel">Sign in by email</h3>
  </div>
  <div class="modal-body" style="text-align:left">
    <%= form_for(:session, url: sessions_path) do |f| %>

        <h4>Email</h4>
        <%= f.text_field :email, type: "email", :required => true %>

        <h4>Password</h4>
        <%= f.password_field :password, :required => true, :pattern => ".{6,}", :title => "6 characters minimum" %>
  </div>
  <div class="modal-footer">
        <%= f.submit "Sign in", class: "green_button" %><br><br>
        <%= link_to "Forgot your password?", new_password_reset_path %>
      <% end %>
  </div>
</div>
