<div class="tabbable tabs-left">
  <aside>
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.first_name %>
        <%= @user.last_name %>
      </h1>
    </section>
  </aside>
  <ul class="nav nav-tabs span2">
    <li class="active"><a href="#tab1" data-toggle="tab">Storybooks</a></li>
    <li><%= link_to "Settings", edit_user_path(current_user) %></li>
    <!-- <li><a href="#tab3" data-toggle="tab">Notification</a></li> -->
  </ul>
    
  <div class="tab-content span9">
    <div class="tab-pane active" id="tab1">
      <p>
        <a href="#newstorybook" class="newstorybooklink" rel="tooltip" data-placement="bottom" title="Create a new storybook" data-toggle="modal" data-keyboard="true">
          <button class="btn btn-medium btn-primary" type="button">
            Create a new storybook      
          </button>
        </a>
      </p></br>
      <% if @user.profiles_with_relationships.any? %>
        <h5>Storybooks that you are contributing to
          <a href="#newstorybook" class="newstorybooklink" rel="tooltip" data-placement="bottom" title="Create a new storybook" data-toggle="modal" data-keyboard="true">
            <i class="icon-plus"></i>
          </a>

        </h5>
        <ol class="memories">
          <%= render @profiles %>
        </ol>
        <%= will_paginate @profiles %>
      <% else %>
        <p>You don't have any life storybooks. Why don't you create one?</p>
      <% end %>
    </div><!-- .tab-pane tab1 -->
  </div><!-- .tabcontent -->
</div><!-- .tabbable -->
<%= render 'shared/new_storybook_modal' %>