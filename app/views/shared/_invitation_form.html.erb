<%= form_for @invitation do |f| %>

  <%= render 'shared/error_messages', object: f.object %>

  <input type="hidden" id="invitation_profile_id" name="invitation[profile_id]" value="<%= @profile.id %>" />

  <p>
    <h5><%= f.label :recipient_email, "Friend's email address" %></h5>
    <% if signed_in? && current_user.email == ('familytalesuser2@gmail.com') and @profile.url == "alexdunphy" %>
    	<textarea rows="1" cols="30" readonly>You cannot invite friends to this sample storybook as an Explorer.</textarea>
		<% else %>
		  <%= f.text_field :recipient_email %>
	  <% end %>
  </p>

  <p>
<h5>Permissions:</h5>

<input type="radio" name="permission" value="view"> Viewer 
<div class="small_desc">Viewer can only view this storybook.</div>
<input type="radio" name="permission" value="contribute" checked> Contributor 
<div class="small_desc">Contributor can view and add new stories about <%= @profile.first_name %>. </div>
<input type="radio" name="permission" value="edit"> Editor 
<div class="small_desc">Editor can edit this storybook. They can help you customize this storybook, invite other friends and family, and delete stories that are not appropriate.</div>

  
<br>
	<% if signed_in? && current_user.email == ('familytalesuser2@gmail.com') and @profile.url == "alexdunphy" %>
		<a class="green_button" href="/signup" style:"text-decoration:none !important;">Start your storybook</a>
	<% else %>
	  <p><%= f.submit "Send", class: "green_button" %></p>
  <% end %>
<% end %>