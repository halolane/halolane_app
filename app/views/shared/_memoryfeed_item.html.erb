
<div class="newbox" id="blank"></div>
<div class="newbox">

	<% if memoryfeed_item.photo.file? %>
		<span class="box-image">
			<%= image_tag memoryfeed_item.photo, class: "storyimage" %>
			</br>
		</span>
	<% end %>
	<span class='box-text'>
		<%= raw(memoryfeed_item.content) %>
	</span>

	<span class='box-user'>
		<!-- <%= link_to gravatar_for(memoryfeed_item.user), memoryfeed_item.user %> -->
		<%= link_to memoryfeed_item.user.first_name, memoryfeed_item.user %>
	</span>
	<span class="box-timestamp">
		Posted <%= time_ago_in_words(memoryfeed_item.created_at) %> ago.
	</span>
	<span class="story-edit-btn">
		<% if current_user?(memoryfeed_item.user) %>
		<%= link_to "Delete", memoryfeed_item, method: :delete, data: { confirm: "Are you sure?" }, title: "Delete this story", :class => "btn" %>
		<%= link_to "Edit", edit_memory_path(memoryfeed_item), title: "Edit this story", :class => "btn" %>
		<% else %>
			<button class="btn">Comment</button>
			<button class="btn">Flag</button>
		<% end %>
	</span>
</div>
