
<div class="newbox" id="blank"></div>
<div class="newbox story" id="<%= 'chp' + (Chapter.find(memoryfeed_item.chapter_id)).chapter_num.to_s %>">
	<span class="story-edit-btn">
		<% if signed_in? and current_user.contributing?(@profile) and ( current_user?(memoryfeed_item.user) or current_user.storybook_editor?(@profile) ) %>
			<div class="dropdown">
				<a class="dropdown-toggle icon-chevron" data-toggle="dropdown" href="#"><i class="icon-chevron-down"></i></a>
				
					<ul class="dropdown-menu memory" role="menu" aria-labelledby="dLabel">
						
						
							<li><%= link_to "Delete", memoryfeed_item, method: :delete, data: { confirm: "Are you sure?" }, title: "Delete this story",  %></li>
						<% if current_user?(memoryfeed_item.user) %>
							<li><%= link_to "Edit", edit_memory_path(memoryfeed_item), title: "Edit this story" %></li>
						<% end %>
						<!-- for future implementation
						<li><a href="#">Comment</a></li>
						<li><a href="#">Flag</a></li>
						-->
					</ul>
			</div>
		<% end %>
</span>
	<%= link_to zoomstory_memory_path(memoryfeed_item), :remote => true, :class => "notextdecoration" do %>
		<% if memoryfeed_item.photo.file? %>
		
			<span class="box-image">
				<%= image_tag memoryfeed_item.photo.url(:storybook), class: "storyimage" %>
				</br>
			</span>
		<% end %>
		<span class='box-text'>
			<%= raw(memoryfeed_item.content) %>
		</span>
		
		<span class='box-user'>
			<!-- <%= link_to gravatar_for(memoryfeed_item.user), memoryfeed_item.user %> -->
			<%= memoryfeed_item.user.first_name + " " + memoryfeed_item.user.last_name %>
			<!-- <%= link_to memoryfeed_item.user.first_name + " " + memoryfeed_item.user.last_name, memoryfeed_item.user %> -->
		</span>
		<span class="box-timestamp">
			<%= memoryfeed_item.date.strftime("%a, %b %d, %Y")  %>
		</span>
	<% end %>

	<span class="like-btn">
		<div class="likebutton">
			<% if current_user.like?(memoryfeed_item) %>
				<%= link_to unlike_memory_path(memoryfeed_item), :remote => true, :class => "btn" do %>
					Unlike
				<% end %>
			<% else %>
				<%= link_to like_memory_path(memoryfeed_item), :remote => true, :class => "btn" do %>
					<i class="icon-heart red"></i> Like
				<% end %>
			<% end %> 
		</div>
	</span>
</div>
