<!-- Modal -->
<div id="signin_modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="signin_modalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="signin_modalLabel">Sign in to FamilyTales</h3>
  </div>
  <div class="modal-body">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.text_field :email, :placeholder=>"Email address" %>

      <%= f.password_field :password, :placeholder=>"Password" %>
       <%= f.submit "Sign in", class: "signin_button"%>
    <% end %>
    
  </div>
  <div class="modal-footer">
    

    <p>New user? <!--<%= link_to "Sign up now!", signup_path %>-->
      <a data-toggle="modal" data-dismiss="modal" aria-hidden="true" href="#betamodal" >Sign up now!</a>
    </p>
  </div>
</div>