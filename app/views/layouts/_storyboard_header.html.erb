  <div class="navbar-inner">
    <div class="container">
      <nav>
        <ul class="nav btn-topbar-left">
          <% if signed_in? && current_user.email == ('familytalesuser2@gmail.com') and @profile.url == "alexdunphy" %>
            <li class="storyboardlogo">
              <%= link_to image_tag("/assets/images/small-logo.png"), signout_path, method: "delete", id: "logo", rel:"tooltip", title:"Go to the FamilyTales home page" %> 
            </li>
          <% else %>
            <li class="storyboardlogo">
              <%= link_to image_tag("/assets/images/small-logo.png"), root_path, id: "logo" %> 
            </li>
          <% end %>

          <% if signed_in? && current_user.canContribute?(@profile) %>
            <li class="iconaddcontributor _showAddCollaborator" data-step="5" data-intro="You have complete control who want to view, contribute or edit <%= @profile.first_name %>'s storybook." data-position="bottom">
              <a href="#addcontributor" class="iconaddcontributorlink" rel="tooltip" data-placement="bottom" title="Invite your friends & family" data-toggle="modal" data-keyboard="true">
                <span class="icon-stack">
                  <i class="icon-user icon-stack-base"></i>
                  <i class="icon-plus plus-user"></i>
                </span>
              </a>
            </li>
          <% end %>
        </ul>
        <ul class="nav pull-right">
             <% if signed_in? && current_user.email == ('familytalesuser2@gmail.com') and @profile.url == "alexdunphy" %>
              <li><div class="topbarname" data-step="1" data-intro="Welcome to FamilyTales! This is <%= @profile.first_name %>'s sample storybook."><h4>
                <%= @profile.first_name + " " + @profile.last_name + "\'s storybook" %>
              </h4></div></li>
            <% else %>
              <li><div class="topbarname" data-step="1" data-intro="Welcome to FamilyTales! This is <%= @profile.first_name %>'s storybook."><h4>
                <% if signed_in? && current_user.isEditor?(@profile) %>
                  <%= link_to  @profile.first_name + " " + @profile.last_name + "\'s storybook", edit_profile_path(@profile), rel:"tooltip", title:"Edit storybook settings" %>
                <% else %>
                  <%= @profile.first_name + " " + @profile.last_name + "\'s storybook" %>
                <% end %>
              </h4></div></li>
            <% end %>
            <% if signed_in? and current_user.email != ('familytalesuser2@gmail.com') and @profile.url != "alexdunphy" %>

              <li class="loggedinuser">
                <div class="dropdown">
                  <a class="dropdown-toggle" data-toggle="dropdown" href="#"><h4 class="storybook-user"><%= current_user.first_name + " " + current_user.last_name %></h4> <i class="icon-chevron-sign-down gray"></i></a>
                  <ul class="dropdown-menu settingsdropdown" role="menu" aria-labelledby="dLabel">
                    <li><%= link_to "Edit your user settings", edit_user_path(current_user) %></li>
                    <li class="divider"></li>

                    <% if signed_in? && current_user.isEditor?(@profile) %>
                    <li><%= link_to "Edit this storybook settings", edit_profile_path(@profile) %></li>
                    <% end %>
                    
                    <li><%= link_to "View your other storybooks", root_path %></li>
                    <% if has_relationship?(@profile.id, current_user.id) %>
                      <li><%= link_to "Change your relationship to " + @profile.first_name, edit_relationship_path(@relationship) %></li>
                    <% end %>

                    <li class="divider"></li>

                    <li><%= link_to "Log out", signout_path, method: "delete" %></li>
                    <li><a href="javascript:void(0);" onclick="startIntro();">Help</a></li>
                    <!-- 
                    <li><%= link_to "Privacy Settings" %></li>
                  -->
                  </ul>
                </div>
              </li>
          <% else %>    
            <li class="loggedinuser">
              <h4 class="storybook-user">Explorer User</h4>
            </li>
          <% end %>

        </ul>
      </nav>
    </div>
  </div>
