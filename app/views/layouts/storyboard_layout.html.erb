<head>
    <link rel="icon" 
    type="image/png" 
    href="/images/favicon1.png">
  <title><%= full_title(yield(:title)) %></title>
  
  <meta property="og:url"         content="https://www.familytales.co/" /> 
  <meta property="og:title"       content="FamilyTales | Start celebrating your family stories today." /> 
  <meta property="og:description" content="FamilyTales enables families to capture and share their precious memories (stories, pictures, videos and audio clips) in a digital storybook that can be passed on for generations to come! You can also print off your personalized storybook as a keepsakes, or as a gift others." /> 
  <meta property="og:image"       content="https://www.familytales.co/images/FamilyTalesLogo.png" /> 

  <%= stylesheet_link_tag    "application-storyboard", media: "all" %>
  <%= javascript_include_tag "application-storyboard" %>
  
   <% if  ( current_user.email == ('familytalesuser2@gmail.com') and @profile.url == "alexdunphy" ) or 
          (signed_in? && current_user.contributing?(@profile) && (current_user.getPermission(@profile) == "edit" or current_user.getPermission(@profile) == "contribute") && current_user.memorycount == 0 && @profile.memorycount > 0 ) %>
    <script type="text/javascript">
      $(window).load(function(){
          

        $('#sneakpeakmodal1').on('show', function () {
          $('.welcomesneakpeek-coachmark').removeClass('hide');
          $('.skipthisguide-coachmark').removeClass('hide');
          $('body').scrollLeft(0);
          $("body").mousewheel(function(event) {
            $(this).unbind('mousewheel').mousewheel();
          });
        });

        $('#sneakpeakmodal1').on('hide', function () {
          $('.welcomesneakpeek-coachmark').addClass('hide');
          $('.thistory-coachmark').addClass('hide');
          $('.sneakpeekaddmemory-coachmark').addClass('hide');
          $('.newfeatures-coachmark').addClass('hide');
          $('.startstorybook-coachmark').addClass('hide');
          $('.sneakpeekinvite-coachmark').addClass('hide');
          $('.skipthisguide-coachmark').addClass('hide');
          $('.alwaysfree-coachmark').addClass('hide');
          $('div#content').removeClass('overmodal');
          $('div#content').closest('div.newbox.story').removeClass('overmodal'); 
          $('.navbar-inner').removeClass('overmodal');
          $(".nav_controls.right, .nav_controls.left").removeClass('overmodal');
          $('.navbar-inner').removeClass('overmodal');
          $('div#content').removeClass('shiftright200');
          $('header.navbar-inverse').removeClass('overmodal');
        });

        $('.skipthisguide-coachmark').click(function() {
          $('#sneakpeakmodal1').modal('hide');
        });

        $('.nextguide').click(function(){
          if (!$('.welcomesneakpeek-coachmark').hasClass("hide")) {
            $('.welcomesneakpeek-coachmark').addClass('hide');
            $('.thistory-coachmark').removeClass('hide');
            $('div#content').addClass('overmodal');
            $('div#content').addClass('shiftright200');
            $('body').scrollLeft(0);
            $('div#content').closest('div.newbox.story').addClass('overmodal');
          } 
          else  if (!$('.thistory-coachmark').hasClass("hide")) {
            $('.thistory-coachmark').addClass('hide');
            $('.sneakpeekaddmemory-coachmark').removeClass('hide');
            $('ul.dropdown-menu.addnewstory').css('cssText' , 'display: block !important;');
            $('div#content').removeClass('overmodal');
            $('div#content').removeClass('shiftright200');
            $('div#content').closest('div.newbox.story').removeClass('overmodal'); 
            $('.navbar-inner').addClass('overmodal');
          }
          else  if (!$('.sneakpeekaddmemory-coachmark').hasClass("hide")) {
            $('.sneakpeekaddmemory-coachmark').addClass('hide');
            $('ul.dropdown-menu.addnewstory').css('cssText' , 'display: none !important;');
            $('.navbar-inner').removeClass('overmodal');
            $('.scrollsideways-coachmark').removeClass('hide');
            var scrollVal = $('body').scrollLeft() + 300;
            $(".nav_controls.right, .nav_controls.left").fadeTo("fast",0.8);
            $(".nav_controls.right, .nav_controls.left").addClass('overmodal');
          }
           else  if (!$('.scrollsideways-coachmark').hasClass("hide")) {
            $('.scrollsideways-coachmark').addClass('hide');
            $('.sneakpeekinvite-coachmark').removeClass('hide');  
            $(".nav_controls.right, .nav_controls.left").removeClass('overmodal');
            $(".nav_controls.right, .nav_controls.left").fadeTo("fast",0);
            $('.navbar-inner').addClass('overmodal');
          }
          else  if (!$('.sneakpeekinvite-coachmark').hasClass("hide")) {
            $('.sneakpeekinvite-coachmark').addClass('hide');
            $('.navbar-inner').addClass('overmodal');
            $('.navbar-inner').removeClass('overmodal');
            $('.newfeatures-coachmark').removeClass('hide');
          }
          else if (!$('.newfeatures-coachmark').hasClass("hide")) { 
            $('.newfeatures-coachmark').addClass('hide');
            $('.startstorybook-coachmark').removeClass('hide');
            $('.alwaysfree-coachmark').removeClass('hide');
            $('header.navbar-inverse').addClass('overmodal');
          } else{
            $('.startstorybook-coachmark').addClass('hide');
            $('.alwaysfree-coachmark').addClass('hide');
            $('#sneakpeakmodal1').modal('hide');
            $('header.navbar-inverse').removeClass('overmodal');
          } 
        });

        $('#sneakpeakmodal1').modal({
          backdrop:'static',
          keyboard:true,
          show: true
        });      
      });
    </script>

    <!-- crazy egg -->
    <script type="text/javascript">
    setTimeout(function(){var a=document.createElement("script");
    var b=document.getElementsByTagName("script")[0];
    a.src=document.location.protocol+"//dnn506yrbagrg.cloudfront.net/pages/scripts/0017/3827.js?"+Math.floor(new Date().getTime()/3600000);
    a.async=true;a.type="text/javascript";b.parentNode.insertBefore(a,b)}, 1);
    </script>
  <% end %>
  <% if signed_in? && current_user.contributing?(@profile) && (current_user.getPermission(@profile) == "edit" or current_user.getPermission(@profile) == "contribute") && current_user.memorycount == 0  && @profile.memorycount == 0 %>
    <script type="text/javascript">
      $(window).load(function(){
        $('#newuserstorybook').modal('show');
        $('#newuserstorybook').on('hide', function () {
          $('.coachmarks').addClass('hide');
          $('#firstthreestories_backdrop').modal('show');
          $('.firststories-coachmark').removeClass('hide');
        });

        $('#firstthreestories_backdrop').on('hide', function () {
          $('.firststories-coachmark').addClass('hide');
          $('#newmemorymodal').modal('show');
        });    

        $('#emailstories').on('hide', function () {
          $('.firstaddbyemail-coachmark').addClass('hide');
        });  
      });
    </script>
  <% end %>


   <!--Mouse wheel horizontal scroll -->
  <script>

    $(function() {
      $("body").mousewheel(function(event, delta) {
        this.scrollLeft -= (delta * 30);
        event.preventDefault();
      });

      $('#zoomstory').on('hide', function () {
        $("body").mousewheel(function(event, delta) {
          this.scrollLeft -= (delta * 30);
          event.preventDefault();
        });
      });

      $('#sneakpeakmodal1').on('hide', function () {
        $("body").mousewheel(function(event, delta) {
          this.scrollLeft -= (delta * 30);
          event.preventDefault();
        });
      });
    });
  </script>

 
  <script type="text/javascript">
    function skipQuestion() {
      var $newMemoryQuestion = "<p>" + <%= raw (StorybookQuestion.find(rand(StorybookQuestion.count) + StorybookQuestion.first.id).question.gsub("@profile.first_name", @profile.first_name)).to_json %> + "</p>";
      $('div.memoryquestion').html($newMemoryQuestion);
    }
  </script>
  
