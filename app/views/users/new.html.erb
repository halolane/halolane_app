<% provide(:title, 'Sign up') %>


<div class="row">
	<div class="span6 offset3">
	<div class="social_signin center">
      <p><a class="btn-auth btn-facebook large" href="/auth/facebook">Sign up with <b>Facebook</b></a></p>
      <p><h4>or</h4></p>
      <p><div><a class="btn-auth btn-email icon-envelope large"  data-toggle="modal" data-dismiss="modal" aria-hidden="true" href="#signin_form"></i>Sign up by <b>email</b></a></div></p>
    </div>
	</div>
</div>


<div id="signin_form" class="modal hide fade" tabindex="-1" role="dialog" role="dialog" aria-labelledby="addcontributorLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="forgetpasswordlabel">Sign up by email</h3>
  </div>
  <div class="modal-body" style="text-align:left">
    <%= form_for(@user) do |f| %>
		  <%= render 'shared/error_messages', object: f.object %>
		  <%= f.label :first_name %>
		  <%= f.text_field :first_name, :required => true %>

		  <%= f.label :last_name %>
		  <%= f.text_field :last_name, :required => true %>

		  <%= f.label :email %>
		  <%= f.text_field :email, type: "email", :required => true %>

		  <%= f.label :password %>
		  <%= f.password_field :password, :required => true, :pattern => ".{6,}", :title => "6 characters minimum" %><br>
  </div>
  <div class="modal-footer">
         <%= f.submit "Create my storybook!", class: "green_button", width:"width:200px !important;" %>
		  <% end %>
  </div>
</div>
