<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="span8">
    <% if @user.memories.any? %>
      <h3>Memories (<%= @user.memories.count %>)</h3>
      <ol class="memories">
        <%= render @memories %>
      </ol>
      <%= will_paginate @memories %>
    <% end %>
  </div>
</div>


<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
