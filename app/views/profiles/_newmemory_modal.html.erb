<!-- Modal -->
<div id="newmemorymodal" class="modal hide fade newmemorymodal" tabindex="-1" role="dialog" aria-labelledby="newMemoryLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="newMemoryLabel">Write a new story about <%= @profile.first_name %></h3>
  </div>
  <div class="modal-body">
  	<div class="createChapter_form">
	  	<%= render 'new_chapter_form' %>
	  </div>
		<%= form_for @memory, :html => { :multipart => true }, :remote => true do |f| %>
	  <%= render 'shared/error_messages', object: f.object %>

	  <input type="hidden" id="memory_profile_id" name="memory[profile_id]" value="<%= @profile.id %>" />
	  <input type="hidden" id="memory_user_id" name="memory[user_id]" value="<%= current_user.id %>" />
	  <div class="field">
	  				<div class="addchapter">
				<h4>Chapter</h4>
				<!-- <%= select "memory","chapter", 
				  				@profile.chapterlist.reverse.collect {|p| [ "Chapter " + p.chapter_num.to_s + " - " + p.chapter_name, p.id ] }%> -->

				<div class="chapterPicker">
				  <div class="chapterPickerInnerWrapper">
				    <div class="createChapter">
					    
				    </div>

				    <div class="chapterPickerInner">
				    	<% if not @profile.chapterlist.nil? %>
					      <ul class="chapterPicker_list">
					      	<% @profile.chapterlist.reverse.each do |chp| %>
					      		<% if chp.chapter_num == @profile.chaptercount %>
										  <li class="chapterPickerItem active" id="<%= chp.id %>">
										    <%= "Chapter " + chp.chapter_num.to_s + " - " + chp.chapter_name %>
										  </li>
										<% else %>
										  <li class="chapterPickerItem" id="<%= chp.id %>">
										    <%= "Chapter " + chp.chapter_num.to_s + " - " + chp.chapter_name %>
										  </li>
										<% end %>
					      	<% end %>
					      </ul>
				      <% end %>
				    </div>
				  </div>
				  <div class="chapterPickerOuter">
				    <div class="currentChapter">
				            
				      <div class="iconWrapper">        
				        <i class="icon-sort-down"></i>
				        
				      </div>

				        <span class="currentChapterName"><%= "Chapter " + @profile.chapterlist.last.chapter_num.to_s + " - " + @profile.chapterlist.last.chapter_name %>
				        	<input id="memory_chapter" name="memory[chapter]" type="hidden" value="<%= @profile.chapterlist.last.id %>">
				        </span>
				    </div>
				  </div>
				</div>

			</div>
