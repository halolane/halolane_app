<% provide(:title, "Edit the storybook of" + @profile.first_name + " " + @profile.last_name) %> 
<h1>Update the storybook of <%= @profile.first_name + " " + @profile.last_name %> </h1>


<div class="row">
	<div class="span6 offset3">
		<%= form_for(@profile) do |f| %>

		  <%= render 'shared/error_messages', object: f.object %>

      <p>
		  	<%= f.label :first_name %>
		  	<%= f.text_field :first_name %>
  		</p>

		  <p>
		  	<%= f.label :last_name %>
		  	<%= f.text_field :last_name %>
		  </p>

		  <p>
		  	<%= f.label :birthday %>
		  	<%= f.date_select :birthday,
		                    { :order => [:month, :day, :year], 
		                      :start_year => 1900,
                    	      :end_year => Date.today.year,
                    	      :default => Date.new(1950, 01, 01) } %>
      </p>


		  <%= f.submit "Save changes", class: "green_button" %>
		<% end %>
	</div>
</div>
