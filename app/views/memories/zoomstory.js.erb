$(document).ready(function(){
	<%= remotipart_response do %>
	  $('#zoomstory').html("<%= escape_javascript render('shared/zoomstory_modal') %>");
   	$("body").mousewheel(function(event) {
      $(this).unbind('mousewheel').mousewheel();
    });
    $(".commentItem").hover(function(){
	 		$(this).find(".comment-edit-btn").fadeTo(50,1);

		}, function() {
	   	$(this).find(".comment-edit-btn").fadeTo(50,0);
	 	});
	<% end %>
});