$(document).ready(function(){
	<%= remotipart_response do %>
		<% if @memory.save %>  
			
		 	$('.hero-unit-question').after("<%= escape_javascript render('memories/new_story_form') %>"); 
		 	$('.heronewquestion').html("<%= escape_javascript render('memories/new_question_form') %>");
		 	$('.hero-unit-hidden').slideToggle();
      $('.answerquestion').removeClass('hide');

		 	// clear form
			$('#memory_photo').val('');
			$('textarea#memory_content').replaceWith('<textarea class="newstorycontent placeholder" cols="10" id="memory_content" name="memory[content]" placeholder="Write a new story..." rows="2"></textarea>');
			$('.answerquestion').click(function(){
        $('.hero-unit-hidden').slideToggle();
        $('.answerquestion').addClass('hide');
      });
      $(".hero-unit").hover(function() {
				$(this).find(".story-edit-btn").fadeTo(50,1);

			}, function() {
		   	$(this).find(".story-edit-btn").fadeTo(50,0);
		 	});
		<% else %>
			$('.loading-spinner').remove();
			$('.errormodal-body').empty();
			$('.errormodal-body').html("<%= @error_msg.html_safe %>");
			$('#errormodal').modal('show');
		<% end %>
	<% end %>
});