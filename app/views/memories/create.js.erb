$(document).ready(function(){
	<%= remotipart_response do %>
		<% if params[:memory][:photo] == nil and params[:memory][:content] == "" %>
			alert("Missing memory and photo!");
		<% else %>  
			var $tile_num_class = '.tile' + $('#memory_tile_num').val();
			$($tile_num_class).removeClass('EmptyTile');
		 	$($tile_num_class).html("<%= escape_javascript render('memories/new_story_form') %>"); 
			$('#memory_photo').val('');
			$('textarea#memory_content').replaceWith('<textarea cols="10" id="memory_content" maxlength="250" name="memory[content]" placeholder="Write a new story..." rows="1" class=""></textarea>');
		<% end %>
	<% end %>
});